<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <h1>Home</h1>
        {% if path.shared.tag == 'File' %}
        {{ path.content }}
        {% else %}
        <div>
            <h2>{{ path.shared.content.path }}</h2>
            <p>{{ path.relative }}</p>
            <ul>
                {% if path.parent %}
                <a href="/shared/"></a>
                {% endif %} {% for child in children |
                sort(attribute='shared.tag') %}
                <li>
                    <a href="/shared/{{ child.relative }}">{{
                        child.shared.content.name
                    }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </body>
</html>
